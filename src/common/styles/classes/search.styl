.input-text
  font(altFont)
  fs(1.2)
  padding-right 38px
  padding-left @padding-right
  text-align center

.clear-search
  center()
  wh(28px)
  hideText()
  opacity 0
  position absolute
  right 0
  top 50%
  transform translateY(-10%) rotate(-22.5deg)
  transition opacity .4s ease, visibility .4s ease, transform .4s ease
  visibility hidden

  &:before
    wh(100%)

  &.visible
    opacity 1
    transform translateY(-50%) rotate(0)
    visibility visible
