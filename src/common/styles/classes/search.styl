.input-text
  font(altFont)
  fs(1.2)
  padding-right 38px
  padding-left @padding-right
  text-align center

.clear-search
  center()
  wh(28px)
  hideText()
  opacity 0
  position absolute
  right 0
  top 50%
  transform translateY(-10%) rotate(-22.5deg)
  transition opacity .4s ease, visibility .4s ease, transform .4s ease
  visibility hidden

  &:before
    wh(100%)

  &.visible
    opacity 1
    transform translateY(-50%) rotate(0)
    visibility visible

.magnifying-glass
  svg('/icons/magnifying-glass-dark')
  wh(28px)
  background-position center
  background-repeat no-repeat
  position absolute
  left 50%
  top @left
  transform translate(-50%, -50%)
  z-index -1
  transition opacity .8s ease .6s, visibility .8s ease .6s

:global .magnifying-glass-hidden
  transition opacity .2s ease, visibility .2s ease
  opacity 0
  visibility hidden
