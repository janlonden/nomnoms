@import '../../styles/import'

@import '../../styles/classes/button'

.inner
  height 60vw
  min-height 15rem
  position relative

  &.user-photo
    height 25rem

.photo
  overflow hidden
  display flex
  wh(100%)

.label
  bottom 0
  left 50%
  cursor pointer
  position absolute
  transform translateX(-50%)
  background orange

  &:after
    background darken(desaturate(orange, 10%), 10%)

  span
    &:before
      icon('up', 'light')

.uploading
  background orange

  &:after
    display none

  span
    &:before
      icon('timeglass', 'light')

.error
  background yellow
  position absolute
  left 2rem
  right 2rem
  top 2rem
  width auto
  font(altFont)
  buttonPadding(1rem)
  text-align center

.input-file
	opacity 0
	overflow hidden
	position absolute
	wh(0.1px)
	z-index -1

@media (min-width: 699px)
  .inner
    height 35rem
