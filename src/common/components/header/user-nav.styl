@import '../../styles/import'

@import '../../styles/classes/button'

.root
  font(altFont)
  position relative

  .button
    span
      noWrap()
      color brownish

.non-responsive
  height 100%

  .button
    width 100%

  .open
    background-color transparent
    height @height

    &:after
      display none

    span
      text-transform capitalize
      height @height

      &:after
        icon('down', 'dark')

  .nav
    background-color white
    box-shadow 0 0 1px 0 rgba(black, .2)
    opacity 0
    position absolute
    right 0
    top 6rem
    transition opacity .2s ease, visibility .2s ease
    visibility hidden

  .compose
    background-color orange

    &:after
      background-color purple

    span
      color white

      &:before
        icon('plus', 'light')

.responsive
  .nav
    li
      justify-content center

  .open
    display none

  .compose
    background-color transparent

    &:after
      background-color lighten(beige2, 60%)

    span
      &:before
        icon('plus', 'dark')

.nav
  li
    display flex

  .dashboard
  .logout
    background-color transparent

    &:after
      background-color lighten(beige2, 60%)

  .dashboard
    span
      &:before
        icon('user', 'dark')

  .logout
    span
      &:before
        icon('logout', 'dark')

:global .user-nav
  &.active
    opacity 1
    visibility visible
